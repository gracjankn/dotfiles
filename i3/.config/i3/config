# ~~~~~~~~~~~~
#  Appearance
# ~~~~~~~~~~~~

# Font for windows titles and i3-bar
font pango:DejaVu Sans Mono 10

# Border style
for_window [class="^.*"] border pixel 2, title_format " %title " smart_borders on
smart_borders on 

# ~~~~~~~~~~~
#  Autostart
# ~~~~~~~~~~~

exec --no-startup-id xwallpaper --stretch ~/dotfiles/wallpapers/Wallpaper\ â€”\ Monochrome\ Mountain.jpg
exec_always --no-startup-id $HOME/.config/polybar/launch.sh
exec_always --no-startup-id xrdb ~/.Xresources

# ~~~~~~~~~~~~~
#  Keybindings
# ~~~~~~~~~~~~~

# Modifier keys
set $mod Mod4
set $hyper Mod3

# Launch Apps
bindsym $hyper+Return exec --no-startup-id i3-sensible-terminal
bindsym $hyper+b exec --no-startup-id brave
bindsym $hyper+f exec --no-startup-id firefox
bindsym $hyper+t exec --no-startup-id telegram-desktop
bindsym $hyper+m exec --no-startup-id multimc

# Change volume with mouse
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%

# Quit window
bindsym $mod+q kill

# Open DMenu (i3 wrapper hides Terminal apps)
bindsym $mod+d exec --no-startup-id i3-dmenu-desktop

# Switch windows (VIM keys)
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Move window (VIM keys)
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Toggle fullscreen
bindsym $mod+f fullscreen toggle

# Switch to workspace
bindsym $mod+1 workspace$ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# Move window to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# Reload config file
bindsym $mod+Shift+c reload

# Restart i3
bindsym $mod+Shift+r restart

# ~~~~~~~~~~~~~~~~~~~~~~
#  Application Settings
# ~~~~~~~~~~~~~~~~~~~~~~

# Workspace Browser
assign [class="Surf"] workspace $ws1
assign [class="Brave"] workspace $ws1
assign [class="firefox"] workspace $ws1

# Workspace Terminal
assign [class="St"] workspace $ws2
assign [class="Termite"] workspace $ws2

# Workspace Games
assign [class="MultiMC"] workspace $ws3
assign [class="Minecraft"] workspace $ws3
assign [class="Steam"] workspace $ws3

# ~~~~~~~~~~~~~~~
#  Miscellaneous
# ~~~~~~~~~~~~~~~

# Workspace Names
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

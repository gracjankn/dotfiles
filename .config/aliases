alias cfi='$EDITOR $XDG_CONFIG_HOME/i3/config'
alias cfe='$EDITOR $HOME/.zshenv'
alias sc='source $XDG_CONFIG_HOME/zsh/.zshrc'

alias resetlaunchpad='defaults write com.apple.dock ResetLaunchPad -bool true;killall Dock'

# Basic aliases
alias ls='lsd -ALl'
alias tree='lsd -A --tree'
alias rm='rm -Rdf'
alias v='nvim'
alias vim='nvim'
alias g='git'
alias c='clear'
alias wget='wget --hsts-file ""'
alias cat='bat'

# youtube-dl
alias downloadMP3='youtube-dl -i --extract-audio --audio-format mp3 --audio-quality 0'

# navigation
alias ...='cd ../..'
alias .3='cd ../../..'
alias .4='cd ../../..'
alias .5='cd ../../../..'
alias .6='cd ../../../../..'

# Config aliases
